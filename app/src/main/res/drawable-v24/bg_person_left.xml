<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置透明背景色 -->
    <solid android:color="#FFFFE0" />

    <!-- 设置一个黑色边框 -->
    <stroke
        android:width="2px"
        android:color="#FFF0" />
    <!-- 设置四个圆角的半径 -->
    <corners
        android:bottomLeftRadius="50px"
        android:bottomRightRadius="0px"
        android:topLeftRadius="50px"
        android:topRightRadius="0px" />
    <!-- 设置一下边距,让空间大一点 -->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="0dp"
        android:top="5dp" />

</shape>